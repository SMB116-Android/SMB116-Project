<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.projetandroid.LoginFragment"
        android:label="fragment_1"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_login_to_trending"
            app:destination="@id/trendingFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.projetandroid.RegisterFragment"
        android:label="fragment_2"
        tools:layout="@layout/fragment_register" >
        <action
            android:id="@+id/action_register_to_login"
            app:destination="@id/loginFragment" />
    </fragment>

    <fragment
        android:id="@+id/trendingFragment"
        android:name="com.example.projetandroid.Trending"
        android:label="fragment_3"
        tools:layout="@layout/fragment_trending" >
    </fragment>
</navigation>